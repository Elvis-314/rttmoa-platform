    "koa": "^2.5.2",
    "koa-body": "^4.1.1",
    "koa-bodyparser": "^4.2.1",
    "koa-helmet": "6.1.0",
    "koa-json": "^2.0.2",
    "koa-jwt": "^3.3.2",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa-swagger-decorator": "^1.8.7",
    "koa2-swagger-ui": "^5.11.0",
    "mockjs": "^1.1.0",
    "mongodb": "^5.9.2",
